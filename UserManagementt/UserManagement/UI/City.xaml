<Page x:Class="UserManagement.UI.City"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserManagement.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="City">

    <StackPanel Background="MediumSlateBlue">
        <Label Content="CITY" HorizontalAlignment="Center"></Label>
        <Label Content="Select your Country" Background="AliceBlue"></Label>
        <ComboBox Background="MediumSlateBlue" x:Name="cmbcountry" SelectionChanged="cmbcountry_SelectionChanged"></ComboBox>
        <Label Content="Select your state" Background="BurlyWood"></Label>
        <ComboBox x:Name="cmbstate" SelectionChanged="cmbstate_SelectionChanged_1"></ComboBox>
        <TextBox x:Name="txtcity" AcceptsReturn="True" Height="300"></TextBox>
        <Button Content="Save" x:Name="btnsave" Click="btnsave_Click" Background="#18cc60"></Button>
        <Button Content="Preview" x:Name="btnpreview" Click="btnpreview_Click" Background="#18cc60"></Button>
    </StackPanel>
</Page>
